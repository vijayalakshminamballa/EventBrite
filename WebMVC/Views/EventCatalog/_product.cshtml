@model WebMVC.Models.EventItem

    <form asp-controller="Cart" asp-action="AddToCart">
        <img class="esh-catalog-thumbnail" src="@Model.PictureUrl" />
        <input class="esh-catalog-button" type="button" value="[ ADD TO CART ]" />
        <div class="esh-catalog-date">
           Date : <span style="color:red;font-weight:bold;text-align:center">@Model.Date.ToString("yyy/MM/dd") </span>
        </div>
        <div class="esh-catalog-name">
            <span style="color:black;font-weight:bold;text-align:left">@Model.Name</span>
        </div>
        <div class="esh-catalog-price">
            <span>@Model.Price.ToString("N2")</span>
        </div>
        @*<div class="esh-catalog-city">
            <span>@Model.City</span>
        </div>*@
        
        <input type="hidden" asp-for="@Model.EventCategory" name="eventcategory" />
        <input type="hidden" asp-for="@Model.EventCategoryId" name="eventcategoryId" />
        <input type="hidden" asp-for="@Model.EventType" name="eventtype" />
        <input type="hidden" asp-for="@Model.EventTypeId" name="eventtypeId" />
        <input type="hidden" asp-for="@Model.Description" name="description" />
        <input type="hidden" asp-for="@Model.Id" name="id" />
        <input type="hidden" asp-for="@Model.Name" name="name" />
        <input type="hidden" asp-for="@Model.PictureUrl" name="pictureUrl" />
        <input type="hidden" asp-for="@Model.Price" name="price" />
        <input type="hidden" asp-for="@Model.City" name="city" />
        <input type="hidden" asp-for="@Model.State" name="state" />
        <input type="hidden" asp-for="@Model.AddressLine" name="addressLine" />
        <input type="hidden" asp-for="@Model.Date" name="date" />
        <input type="hidden" asp-for="@Model.EventCapacity" name="eventCapacity" />

 </form>