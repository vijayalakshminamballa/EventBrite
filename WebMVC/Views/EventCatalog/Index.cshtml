
@{
    ViewData["Title"] = "EventCatalog";
    @model WebMVC.ViewModels.EventCatalogIndexViewModel
}
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner-1.jpg" alt="ASP.NET" class="img-responsive" width="1200" height="100" />
            <div class="carousel-caption" role="option">
                <p>
                    Move Your Dancing Feet
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner-2.jpg" alt="Visual Studio" class="img-responsive" width="1200" height="100" />
            <div class="carousel-caption" role="option">
                <p>
                    Spreading Inspirational Ideas
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner-0.jpg" alt="Package Management" class="img-responsive" width="1200",height="100"/>
            <div class="carousel-caption" role="option">
                <p>
                   Attend the interesting Network events near your place
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<section class="esh-catalog-filters">
    <div class="container">
        <form asp-action="Index" asp-controller="EventCatalog" method="post">
            <label class="esh-catalog-label" data-title="Category">
                <select asp-for="@Model.CategoryFilterApplied" asp-items="@Model.Categories" class="esh-catalog-filter"></select>
            </label>
            <label class="esh-catalog-label" data-title="Type">
                <select asp-for="@Model.TypesFilterApplied" asp-items="@Model.Types" class="esh-catalog-filter"></select>
            </label>
            <label class="esh-catalog-label" data-title="Location">
                <select asp-for="@Model.CityFilterApplied" asp-items="@Model.Locations" class="esh-catalog-filter"></select>
            </label>
            @*<div class="form-group">
                @Html.LabelFor(m => m.StartDateFilterApplied, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.StartDateFilterApplied, "{0:yyyy-MM-ddThh:mm:ss}", new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(m => m.StartDateFilterApplied, "", new { @class = "text-danger" })
                </div>
            </div>*@

            <label class="esh-catalog-label" data-title="Start Date">
                  <input type="date" asp-for="@Model.StartDateFilterApplied" class="esh-catalog-filter" >
            </label>

            <label class="esh-catalog-label" data-title="End Date">
                   <select asp-for="@Model.EndDateFilterApplied" class="esh-catalog-filter"></select>
            </label>
            <input class="esh-catalog-send" type="image" src="~/images/arrow-right.svg" />
            
        </form>
    </div>
    </section>
<div class="container">
    @if (Model.CatalogEvents.Count() > 0)
    {
        @Html.Partial("_pagination", Model.PaginationInfo)

        <div class="esh-Event-items row">
            @foreach (var CatalogEvent in Model.CatalogEvents)
            {
                <div class="esh-Event-item col-md-4">
                    @Html.Partial("_product", CatalogEvent)
                </div>
            }
        </div>

        @Html.Partial("_pagination", Model.PaginationInfo)
    }
    else
    {
        <div class="esh-Event-items row">
            THERE ARE NO RESULTS THAT MATCH YOUR SEARCH
        </div>
    }
</div>

